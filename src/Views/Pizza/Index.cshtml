@model IEnumerable<PizzaProject.Models.Pizza>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.pizzaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.speciality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.crust)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.no_of_slices)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.size)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.pizzaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.speciality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.crust)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.no_of_slices)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.size)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.pizzaId">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.pizzaId">Details</a> |
                @*<a asp-action="Delete" asp-route-id="@item.pizzaId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
